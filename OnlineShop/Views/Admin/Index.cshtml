@using OnlineShop.ViewModels;
@using OnlineShop.Models;
@{
    ViewData["Title"] = "Admin";
    Layout = "_AdminLayout";
}
@model List<Product>

<div class="container px-4 px-lg-5">
    <div class="mt-3 mb-3">
            <a class="btn btn-primary" asp-action="New">Add New Product!</a>
    </div>
    <!-- Content Row-->
    <div class="row gx-4 gx-lg-5">
        
            @foreach(var P in Model){
                <div class="col-md-4 mb-5">
                <div class="card h-100">
                        <div class="card-body">
                            <h2 class="card-title">@P.Name</h2>
                            <img src="~/Images/@P?.Image" style="height:110px;width:160px;" class="justify-content-center"/>
                            <p class="card-text">@P.Description.Substring(0, Math.Min(70, P.Description.Length)) ...</p>
                            <h6 class="card-text">@P.UnitPrice L.E</h6>
                            @if (P.UnitsInStock == 0)
                            {
                            <h6 class="card-title">Out of Stock</h6>
                            }
                            else{
                            <h6 class="card-title">@P.UnitsInStock in Stock</h6>
                            }
                        </div>
                        <div class="card-footer">
                            <a class="btn btn-primary btn-sm" asp-action="Details" asp-route-id="@P.Id">Details</a>
                            <a class="btn btn-success btn-sm" asp-action="Edit" asp-route-id="@P.Id">Edit</a>
                            <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@P.Id">Delete</a>
                        </div>
                    </div>
                </div>
            }
    </div>
</div>